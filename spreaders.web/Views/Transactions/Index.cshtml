@model spreaders.web.Models.TransactionsIndexViewModel
@{
    ViewBag.Title = "Transactions";
}
<a href="/groups/" class="backButton">Back</a>
<h1>Payments</h1>
<div class="transactions"></div>
<section>
    <div class="add">
        <button type="button" class="addSectionExpand">+</button>
    </div>
</section>
<div class="opaqueLayer visuallyHidden"></div>
<section>
    <div class="addSection">
        <button type="button" class="addTransactionButton">
            <img src="/img/spreaders-logo.svg" width="100" height="100" />
            add<br />transaction
        </button>
        <button type="button" class="addPersonButton">
            <img src="/img/transaction-icon.svg" width="100" height="100" />
            add<br />person
        </button>
    </div>
</section>
<div class="mobileNav">
    @{int dim = 80;}
    <div><a href="" class="mobileNavItem payments active"><img src="/img/spreaders-logo.svg" height="@dim" width="@dim"/><span><br>Payments</span></a></div>
    <div><a href="" class="mobileNavItem people"><img src="/img/transaction-icon.svg"  height="@dim" width="@dim"/><span><br>People</span></a></div>
    <div><a href="" class="mobileNavItem payUp"><img src="/img/spreaders-logo.svg"  height="@dim" width="@dim"/><span><br>Pay up</span></a></div>
</div>
<button type="button" class="showUpdates closed">show updates</button>

@section scripts {
    @Scripts.Render("~/js/live/pages/transactions")
}
